# Maintainer:
# Contributor:
pkgname=openstack-keystone
pkgver=2012.2
pkgrel=1
pkgdesc="Identity Service for OpenStack"
arch=('x86_64')
url=("http://docs.openstack.org/developer/keystone/")
license=('Apache')
depends=(
  'python-pam'
  'python-paste'
  'python-paste-deploy'
  'python2-eventlet'
  'python2-greenlet'
  'python2-iso8601'
  'python2-lxml'
  'python2-passlib'
  'python2-routes'
  'python2-sqlalchemy'
  'python2-sqlalchemy-migrate')
source=("https://github.com/openstack/keystone/tarball/2012.2")
md5sums=('619bb72384d6735b302279f0b60ff692')
backup=(
  'etc/keystone/default_catalog.templates'
  'etc/keystone/keystone.conf'
  'etc/keystone/logging.conf'
  'etc/keystone/policy.json')

build() {
  cd "$srcdir/openstack-keystone-355d8ce"
  python2 setup.py build
}

package() {
  cd "$srcdir/openstack-keystone-355d8ce"
  python2 setup.py install --root="${pkgdir}"
  mkdir -p "${pkgdir}/etc"
  cp -a "../../etc/keystone" "${pkgdir}/etc"
  cp -a "../../etc/rc.d" "${pkgdir}/etc"
  chmod 700 "${pkgdir}/etc/keystone"
  chmod 600 "${pkgdir}/etc/keystone/keystone.conf"
  mkdir -p "${pkgdir}/var/log/keystone"
}
