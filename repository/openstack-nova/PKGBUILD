# Maintainer:
# Contributor:
pkgname=openstack-nova
pkgver=2012.2.1
pkgrel=1
pkgdesc="OpenStack Nova"
arch=('x86_64')
url=("http://docs.openstack.org/developer/nova/")
license=('Apache')
depends=(
  'openstack-python-glanceclient'
  'openstack-python-quantumclient'
  'python-anyjson'
  'python-paste'
  'python-paste-deploy'
  'python2'
  'python2-amqplib'
  'python2-babel'
  'python2-boto'
  'python2-cheetah'
  'python2-eventlet'
  'python2-greenlet'
  'python2-httplib2'
  'python2-iso8601'
  'python2-kombu'
  'python2-lxml'
  'python2-netaddr'
  'python2-paramiko'
  'python2-routes'
  'python2-sqlalchemy'
  'python2-sqlalchemy-migrate'
  'python2-suds'
  'python2-webob')
optdepends=(
  'mysql-python'
)
source=("https://github.com/openstack/nova/tarball/stable/folsom")
md5sums=('677e9259cfa56c0ae726cb4400b015da')
backup=(
  'etc/nova/api-paste.ini'
  'etc/nova/nova.conf'
  'etc/nova/policy.json')

build() {
  cd "$srcdir"/openstack-nova-???????
  cat <<EOF >>MANIFEST.in
recursive-include nova/db/sqlalchemy/migrate_repo *.cfg *.sql
EOF
  python2 setup.py build
}

package() {
  cd "$srcdir"/openstack-nova-???????
  python2 setup.py install --root="${pkgdir}"
  mkdir -p "${pkgdir}/etc"
  cp -a "../../etc/nova" "${pkgdir}/etc"
  cp -a "../../etc/rc.d" "${pkgdir}/etc"
  chmod 700 "${pkgdir}/etc/nova"
  mkdir -p "${pkgdir}/var/lib/nova/instances"
  mkdir -p "${pkgdir}/var/log/nova"
}
